#!/usr/bin/env python
"""
Used to take a webcam image when the gnome screensaver is locked or unlocked

Requires mplayer
"""

import dbus
import gobject
from dbus.mainloop.glib import DBusGMainLoop
import subprocess
import time
import datetime
import random

def main():
    """
    Setup dbus and gobject loop.
    """

    DBusGMainLoop(set_as_default = True)

    bus = dbus.SessionBus()
    mainloop = gobject.MainLoop()

    bus.add_signal_receiver(change, 'ActiveChanged', 'org.gnome.ScreenSaver')

    mainloop.run()

def change(state):
    """
    Triggered by dbus when state changes.
    """

    # gnome screensaver locked
    if state == 1:
        print "locked"
    else:
        print "unlocked"
        take_picture()

def take_picture():
    """ calls external command that uses mplayer to take a picture
        with the webcam
    """

    #time.sleep(10 + 50 * random.random())
    print datetime.datetime.now(), "taking picture"
    subprocess.Popen(["./take-picture"])

if __name__ == "__main__":
    main()
